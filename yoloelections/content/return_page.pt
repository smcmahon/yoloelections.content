<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
<style>
table.return {
    width: 50%;
    margin: 1em auto 1em 0;
}
table.return th, table.return td {
    text-align: right;
    padding: 0.25em 0.5em;
}
table.return th:first-child {
    text-align: center;
}
table.return td:first-child {
    text-align: left;
    font-weight: bold;
}
table.return tr.leading {
    background-color: rgba(255, 255, 0, 0.1);
}
.collapse {display:none}
.collapse.in {display:block}
</style>
<script>
jQuery(function($) {
    var buttons=$('#return_pages button'),
        return_pages=$('.return_page'),
        hselector;

    return_pages.hide().attr('aria-expanded', 'false');
    buttons.click(function () {
        var jqt =$(this),
            target = jqt.attr('data-target');

        window.location.hash = target
        buttons.removeClass('context');
        jqt.addClass('context');
        return_pages.hide().attr('aria-expanded', 'false');
        $(target).fadeIn(500).attr('aria-expanded', 'true');
    });
    if (window.location.hash) {
        hselector = "button[dtarget='" + window.location.hash + "']";
        $(hselector).click();
    } else {
        buttons.first().click();
    }
});
</script>

        <div tal:replace="structure context/body/output | nothing" />


        <div id="return_pages">
            <p>Showing:
                <button
                    type="button"
                    tal:repeat="page view/pages"
                    tal:content="page/page_title"
                    tal:attributes="data-target string:#${page/page_id}; dtarget string:#${page/page_id}; aria-controls page/page_id"
                />
            </p>
            <div tal:repeat="page view/pages" tal:attributes="id page/page_id" class="return_page">
                <h2 tal:content="page/page_title" />
                <div tal:repeat="contest page/contests">
                    <table class="return">
                        <thead>
                            <tr>
                                <th colspan="2">
                                    <h3 tal:content="contest/contest_name" style="margin:0" />
                                    <h4 tal:condition="python:contest['options'] > 1" style="margin:0">
                                        <span tal:replace="contest/options" /> elected
                                    </h4>
                                </th>
                            </tr>
                            <tr>
                                <th>&nbsp;</th>
                                <th>Votes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr tal:repeat="choice contest/choices" tal:attributes="class choice/klass">
                                <td><span tal:replace="choice/choice_name" /> <span tal:condition="choice/party">(<span tal:content="choice/party" />)</span></td>
                                <td tal:content="choice/votes" />
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="2">
                                    <span tal:replace="contest/prec_reporting" /> of <span tal:replace="contest/precincts" /> precincts reporting
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </metal:content-core>
</metal:content-core>

</body>
</html>
